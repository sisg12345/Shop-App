// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 商品
model product {
  // ID
  id            Int    @id  @default(autoincrement())
  // カテゴリー
  category      String
  // タイトル
  title         String
  // 説明
  description   String
  // 画像URL
  imageUrl      String
  // 値段
  price         Int
  // 状態
  condition     String
  // 所有者ID
  ownerId       Int
  // 作成ユーザー
  createUser    Int
  // 作成日付
  createDate    DateTime  @default(now())
  // 更新日付
  updateUser    Int
  // 更新ユーザー
  updateDate    DateTime  @updatedAt
}

// ユーザー
model user {
  // ID
  id                Int    @id @default(autoincrement())
  // メールドレス
  email             String  @unique
  // パスワード
  password          String
  // ユーザー名
  username          String
  // ユーザー表示名
  displayName       String
  // 説明
  description       String
  // プロフィール画像のURL
  profileImageUrl   String
  // 作成ユーザー
  createUser        Int
  // 作成日付
  createDate        DateTime  @default(now())
  // 更新日付
  updateUser        Int
  // 更新ユーザー
  updateData        DateTime  @updatedAt
}